<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="cache-control" content="max-age=0" />
        <meta http-equiv="cache-control" content="no-cache" />
        <meta http-equiv="expires" content="0" />
        <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
        <meta http-equiv="pragma" content="no-cache" />

        <title>@ViewBag.Title</title>
        <link rel="shortcut icon" href="~/Content/Icons/logo-sang2.ico">

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/knockout")
        @Scripts.Render("~/bundles/site")
        @Scripts.Render("~/bundles/i18n")
        @RenderSection("scripts", false)
    </head>
    <body>
        @Html.Partial("_NavigationMenu")
        <div class="container body-content">
            @RenderBody()
        </div>
        <div class="panel-footer navbar-fixed-bottom">
            <div class="container">
                <p class="text-muted no-margin">&copy; @DateTime.Now.Year - Sang Nguyen</p>
            </div>
        </div>
    </body>
</html>

<script>
    $.i18n.init({
        lng: "en-US",
        resGetPath: '@Url.Content("~/Content/Translations/")' + 'en-US.json',
        getAsync: false
    }).done(function () {
        $("[data-i18n]").i18n();
    });

    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-56985170-1', 'auto');
    ga('send', 'pageview');
</script>

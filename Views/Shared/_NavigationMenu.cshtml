@using Microsoft.AspNet.Identity
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Sang Nguyen", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Resume", "Resume", "Home")</li>
                <li>@Html.ActionLink("Chat", "Chat", "Home")</li>
                <li>@Html.ActionLink("Game", "Game", "Game")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="http://github.com/slcnguye" class="fa fa-github fa-3x menu-icons" target="_blank"></a>
                </li>
                <li>
                    <a href="http://ca.linkedin.com/pub/sang-nguyen/4a/410/a43/" class="fa fa-linkedin fa-3x menu-icons" target="_blank"></a>
                </li>
            </ul>
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", null, new { title = "Manage" })
                            </li>
                            <li style="margin-right: 10px;">
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            </li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Register", "Register", "Account", null, new { id = "registerLink" })</li>
                        <li style="margin-right: 10px;">@Html.ActionLink("Log in", "Login", "Account", null, new { id = "loginLink" })</li>
                    </ul>
                }
        </div>
    </div>
</div>
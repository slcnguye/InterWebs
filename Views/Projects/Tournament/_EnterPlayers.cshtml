<div class="row">
    <h1 class="text-center col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" data-bind="text: tournamentName"></h1>
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <form>
            <p>Enter matches:</p>

            <div data-bind="foreach: matches">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="row">
                            <input class="col-sm-6" data-bind="value: player1" />
                            <input class="col-sm-6" data-bind="value: player2" />
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <p class="text-center">vs</p>
                    </div>
                    <div class="col-sm-5">
                        <div class="row">
                            <input class="col-sm-6" data-bind="value: player3" />
                            <input class="col-sm-6" data-bind="value: player4" />
                        </div>
                    </div>
                </div>
            </div>

            <div style="height: 100px;"></div>
            <button class="btn btn-default center-block" type="submit" data-bind="text: $.t('Tournament.Create')"></button>
        </form>
</div>
</div>
